<div class="weather-report">
	<h1 class="location-name">{{name}}</h1>
	<hr>
	<div class="flex-container">
		<div class="icon flex-item">
			<i class="icon-{{weather.[0].icon}}"></i>
		</div>
		<!-- /.icon -->
		<div class="flex-item">
			<div class="temperature">
				<span class="degrees">{{main.temp}}<sup class="label">&deg; F</sup></span>
			</div>
			{{#with weather.[0]}}
			<div class="description">{{description}}</div>
			<!-- /.description -->
		</div>
		<!-- /.flex-item -->
		{{/with}}
		<!-- /.temperature -->
	</div>
	<!-- /.clearfix -->
	<hr>
	{{#with wind}}
	<div class="flex-container">
		<div class="flex-item">
			<i class="icon-compass wind-direction" style="transform: rotateZ({{deg}}deg);"></i>
		</div>
		<!-- /.flex-item -->
		<div class="flex-item">
			<div class="wind-speed description">{{speed}} mph wind</div>
		</div>
		<!-- /.flex-item -->
	</div>
	<!-- /.flex-container -->
	{{/with}}
</div>